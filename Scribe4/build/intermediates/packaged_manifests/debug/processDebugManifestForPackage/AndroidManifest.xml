<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.veldsoft.scribe4"
    android:installLocation="auto"
    android:versionCode="2"
    android:versionName="1.01" >

    <uses-sdk
        android:minSdkVersion="25"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:debuggable="true"
        android:description="@string/app_description"
        android:extractNativeLibs="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="eu.veldsoft.scribe4.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="eu.veldsoft.scribe4.GlyphActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="eu.veldsoft.scribe4.RulesActivity"
            android:screenOrientation="portrait" />
        <activity android:name="eu.veldsoft.scribe4.ScribePreferences" />
        <activity
            android:name="eu.veldsoft.scribe4.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:noHistory="true" >
            <meta-data
                android:name="timeout"
                android:value="5000" />
            <meta-data
                android:name="redirect"
                android:value="eu.veldsoft.scribe4.Main" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>